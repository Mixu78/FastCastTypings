{
	"compilerOptions": {
		// required
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"jsx": "react",
		"jsxFactory": "Roact.createElement",
		"module": "commonjs",
		"moduleResolution": "Node",
		"noLib": true,
		"resolveJsonModule": true,
		"strict": true,
		"target": "ESNext",
		"typeRoots": ["node_modules/@rbxts"],

		// configurable
		"rootDir": "src",
		"outDir": "out",
		"baseUrl": "src",
		//"incremental": true,
		//"tsBuildInfoFile": "out/tsconfig.tsbuildinfo",
		"declaration": true,
	},
	"exclude": [
		"out"
	],
	"include": [
		"src"
	],
	//why is the ts compiler stupid
	//why would it look for source files outside of the rootDir
	//like maybe i have them there to test the package im making
	//because logically it should be ignored because it isn't in the rootDir
}
